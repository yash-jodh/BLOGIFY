<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <%- include("./partials/head") %>
</head>

<body>
    <%- include("./partials/navbar") %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="300px">
            <pre><%= blog.body %></pre>
        </div>
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="40px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-2">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input name="content" type="text" class="form-control" placeholder="Enter Your comment">
                        <button class="btn btn-primary mt-1" type="submit">Add</button>
                    </div>
                </form>
                <% } %>
                    <div class="container mt-3">
                        <% comments.forEach(comment=> { %>
                            <img src="<%= comment.createdBy.profileImageURL %>" width="40px">
                            <%= comment.createdBy.fullName %>
                                <pre><%= comment.content %></pre>
                                <% }) %>
                    </div>
        </div>
        <%- include("./partials/scripts") %>
</body>

</html>